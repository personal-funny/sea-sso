<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
    ">

    <context:property-placeholder ignore-unresolvable="true"
                                  location="classpath:/spring/placeholder/datasource.properties"/>

    <bean id="hikariConfig.uac" class="com.zaxxer.hikari.HikariConfig">
        <property name="poolName" value="springHikariCP"/>
        <property name="connectionTestQuery" value="SELECT 1"/>
        <property name="dataSourceClassName" value="${DBDriverClass}"/>
        <property name="maximumPoolSize" value="${DBMaxPoolSize}"/>
        <property name="idleTimeout" value="${DBMaxIdleTime}"/>

        <property name="dataSourceProperties">
            <props>
                <prop key="url">${DBJdbcUrl_uac}</prop>
                <prop key="user">${DBUser}</prop>
                <prop key="password">${DBPassword}</prop>
            </props>
        </property>
    </bean>

    <!-- HikariCP configuration -->
    <bean id="dataSource.uac" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg ref="hikariConfig.uac"/>
    </bean>
</beans>